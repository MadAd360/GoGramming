<!-- extend from base layout --> {% extends "base.html" %}

{% block main %}
<script type="text/javascript">

setInterval(
  function()
  {
    $.ajax({
      url: $SCRIPT_ROOT + '/get_output',
      dataType: 'json',
      success: function(data){
        $('#output').text(data.result);
      },
      timeout: 500 
    });

  },
  1000);

</script>


<style type="text/css">
html {
  height: 100%;
  width: 100%;
  overflow: hidden;
  min-width: 100%;
  min-height: 100%;
}

body {
  height: 100%;
  width: 100%;
  padding: 0;
  margin: 0;
}

.container{
  height:100%;
  display:table;
  width: 100%;
  padding: 0;
}

.row-fluid {height: 100%; display:table-cell; vertical-align: middle;}

.outputline{
  white-space: pre;
}
</style>


{% endblock %}


{% block content %}
<div class="row-fluid">
<div class="panel panel-default span7 col-md-4 col-md-offset-4">
  <div class="panel-body">



<pre id="result">update </pre>
<button id="input" >Click me</button>


<script type="text/javascript">

$("#input").click(
  function(e)
  {
        e.preventDefault();

$.getJSON(
        $SCRIPT_ROOT + '/get_values',
        {},
        function(data)
        {
          $("#result").text(data.result);

       });

  });
</script>


<div id="output" class="outputline">Not Updated</div>



<p>
</p>
</div>  
</div>
</div>
{% endblock %}
